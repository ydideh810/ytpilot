{
  "manifest_version": 3,
  "name": "YT-Copilot",
  "description": "Chat with YouTube",
  "version": "0.0.1",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "world": "MAIN"
    }
  ],
  "minimum_chrome_version": "92",
  "action": {
    "default_icon": {
      "16": "icons/helmet.png",
      "24": "icons/helmet.png",
      "32": "icons/helmet.png"
    },
    "default_title": "Chat with YouTube",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/helmet.png",
    "48": "icons/helmet.png",
    "128": "icons/helmet.png"
  }
}